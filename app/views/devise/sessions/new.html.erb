<div class="signin_up-container">
<div class="main-container" >
  <div class="title">
    <div class="quora-logo"></div>
    <p>A place to share knowledge and better understand the world</p>
  </div>
  <div class="login-container">
    <div class="social-media-login">
      <button type="button"><div class="google-logo"></div>Continue with Google</button>
      <button type="button"><div class="facebook-logo"></div>Continue with Facebook</button>
      <p><%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up with Email", new_registration_path(resource_name), :class => "sign-up-email" %>
      <% end %>. By continuing you indicate that you have read and agree to Quora's <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.</p>
    </div>
    <div class="email-login">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.label :Login, :class => "login-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "login-input" %><br>
        <%= f.password_field :password, autocomplete: "current-password", :class => "login-input" %><br><br>
        <div class="email-login-option">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgot-password"%><br />
          <% end %>
          <%= f.submit "Log in", :class => "login-btn" %>
        <% end %>
        </div>
    </div>
  </div>
</div>
</div>

<%= render "devise/shared/links" %>
