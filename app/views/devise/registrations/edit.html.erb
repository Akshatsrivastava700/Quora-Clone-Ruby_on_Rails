<%= render :partial => 'layouts/header' %>
<div class="edit-main-container">
<h2 class="user-name"><%= current_user.firstname + " " + current_user.lastname  %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="edit-profile-form">
  <div class="edit-name">
    <div class="field">
      <%= f.label :'First Name', :class => "edit-firstname-label" %><br />
      <%= f.text_field :firstname, autofocus: true, :class => 'edit-firstname-input'%>
    </div>
    <div class="field">
      <%= f.label :'Last Name', :class => 'edit-lastname-label'%><br />
      <%= f.text_field :lastname, autofocus: true, :class => 'edit-lastname-input' %>
    </div>
  </div>
  <div class="field">
    <%= f.label :email, :class => 'edit-email-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'edit-email-input' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, :class => 'edit-pwd-label' %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => 'edit-pwd-input' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => 'edit-pwd-confirm-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'edit-pwd-confirm-input' %>
  </div>

  <div class="field">
    <%= f.label :current_password, :class => 'edit-current-pwd-label' %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password", :class => 'edit-current-pwd-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
  </div>
<% end %>
<div class="delete-account">
  <h3>Delete my account</h3>
  <div class="delete-account-btns">
    <%= link_to "Back", :back %>
    <%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
  </div>
</div>

</div>
